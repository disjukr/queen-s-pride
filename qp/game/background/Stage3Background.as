package qp.game.background {    import flash.display.MovieClip;    import flash.events.Event;    import qp.game.Pausable;    import qp.util.MathUtil;    public class Stage3Background extends Background implements Pausable {        private var _interpolatedT: Number;        private var _t: Number;        private var _timeline: MovieClip; // delta        public var background: Once;        public var parallelSet: ParallelSet;        public var firstClose: Once;        public function Stage3Background() {            this._interpolatedT = 0;            this._t = 0;            super();        }        public function set timeline(value: MovieClip): void {            this._timeline = value;        }        override public function pause(): void {            if (this.hasEventListener(Event.ENTER_FRAME))                this.removeEventListener(Event.ENTER_FRAME, ENTER_FRAME);        }        override public function resume(): void {            if (!this.hasEventListener(Event.ENTER_FRAME))                this.addEventListener(Event.ENTER_FRAME, ENTER_FRAME);        }        private function ENTER_FRAME(e: Event): void {            firstClose.t = background.t = parallelSet.t = this._interpolatedT;            if (_timeline != null)                this._t = _timeline.currentFrame / _timeline.totalFrames;            this._interpolatedT = MathUtil.linear(_interpolatedT, this._t, 0.05);        }    }}